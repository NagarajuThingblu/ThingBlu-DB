<p-dialog 
    header="Add New Role"
    [(visible)]="NewUser.ShowAddUserRolePopup"
    modal="modal" 
    [resizable]="true" 
    [responsive]="true" 
    [width]="600" 
    [minWidth]="200" 
    class="notecontrol"
    (onHide)="hideRolePopup()"
  >
  <form #UserRoleForm="ngForm" [formGroup]="newUserRoleForm"  (ngSubmit)="saveRoleNames(UserRoleForm)" novalidate >
      <div class="ui-g">
        <!-- Role -->
                <div class="ui-g-12 ui-md-12">
                  <div class="paddingRL">
                      <div class="le-su-12">
                        <label for="enterrole">
                          {{ newRoleResources.enterrole}}<span class="star">*</span>:
                        </label>

                        <input pInputText
                          name="role"
                          autocomplete="off"
                          id="role"
                          placeholder="Enter Value"
                          type="text"
                          class="clsControl"
                          formControlName="role"
                        />

                        <div class="ui-message ui-messages-error ui-corner-all" appErrorTooltip
                          *ngIf="!newUserRoleForm.controls['role'].valid&&newUserRoleForm.controls['role'].dirty">
                            <span *ngIf="newUserRoleForm.controls['role'].errors['required']">{{newRoleResources.rolerequired}}</span>
                            <span *ngIf="newUserRoleForm.controls['role'].errors['whitespace']">{{newRoleResources.rolerequired}}</span>
                          </div>
                      </div>
                  </div>
                </div>
                <!-- End Role -->
                <!-- Description -->
                <div class="ui-g-12 ui-md-12">
                  <div class="paddingRL">
                      <div class="le-su-12">
                        <label for="enterdescription">
                          {{ newRoleResources.enterdescription}}<span class="star"></span>:
                        </label>

                        <input pInputText
                          name="description"
                          id="description"
                          autocomplete="off"
                          placeholder="Enter Description"
                          type="text"
                          class="clsControl"
                          formControlName="description"
                        />

                        <!-- <div class="ui-message ui-messages-error ui-corner-all" appErrorTooltip
                          *ngIf="!NewUserRoleForm.controls['description'].valid&&NewUserRoleForm.controls['description'].dirty">
                            <span *ngIf="NewUserRoleForm.controls['description'].errors['required']">{{newRoleResources.descriptionrequired}}</span>
                            <span *ngIf="NewUserRoleForm.controls['description'].errors['minlength']">{{newRoleResources.descriptionLength}}</span>
                          </div> -->
                      </div>
                  </div>
                </div>
                <!-- End Description -->
                <!-- IsActive -->
                <div class="ui-g-12 ui-md-12">
                  <div class="paddingRL">
                    <label></label>
                    <div class="clear"></div>

                    <p-checkbox value="true" 
                    [(ngModel)]="chkIsActive" 
                    label="{{globalResource.IsActiveFlag}}" 
                    formControlName="chkIsActive" 
                    binary="true"></p-checkbox>
                  </div>
                </div>
                <!--End IsActive -->
                <div class="ui-g-12 ui-md-6" style="text-align:left;">
                    <div class="paddingRL">
                      <p-button  type="submit" label="Save" id="btnNewUserSave" name="btnNewUserSave" ></p-button>

                      <button pButton
                          (click)="resetForm()"
                          type="button"
                          label="Clear"
                          class="ui-button-secondary"
                      >
                      </button>
                  </div>
                </div>
              </div>
</form>
</p-dialog>
<p-growl [(value)]="msgs" life='5000'></p-growl>